LOAD "testlib.lgo

TO YESNOBOXTEST.SMOKETEST

   SIMPLEREPORTTEST  [ YESNOBOX [YESNOBOX Test] [Press "Yes"]    ] "true
   SIMPLEREPORTTEST  [ YESNOBOX [YESNOBOX Test] [Press "No"]     ] "false
   RUNSTOPPINGTEST   [ YESNOBOX [YESNOBOX Test] [Press "Cancel"] ]

END

TO YESNOBOXTEST.BADINPUT
   RUNNOTENOUGHINPUTSTEST [ IGNORE (YESNOBOX [Title]) ]
   RUNTOOMANYINPUTSTEST   [ IGNORE (YESNOBOX [Title] [Question] "toomany) ]
END

TO YESNOBOXTEST

  YESNOBOXTEST.SMOKETEST
  YESNOBOXTEST.BADINPUT
END
