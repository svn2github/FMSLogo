   ; Attempt to define a procedure within a procedure.
   ; This is illegal.
   TO X
END

TO I.DONT.KNOW.WHAT.TO.DO.WITH.VALUE
   1
   2
END

TO NO.INPUT.NO.OUTPUT
END

TO ONE.INPUT.NO.OUTPUT :X
END

.MACRO MACRO.RETURN.UNBOUND.INSTEAD.OF.LIST
