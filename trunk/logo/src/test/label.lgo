  ; enumerate all known fonts
  SETLABELFONT [unknown]

  SETLABELFONT [System]
  CLEARSCREEN
  RIGHT 90
  LABEL [This is the system font]
  ; TODO verify the font is correct


  SETLABELFONT [[Arial] 24 0 0 400 0 0 0 0 0 0 0 0]
