TO INPORTTEST

  LOCALMAKE "value 0

  MAKE "value INPORT 198
  REPORTTESTPASSED [INPORT did not crash]

  ; bad input
  CATCH "ERROR [(INPORT)]
  CATCH "ERROR [INPORT [192]]
  CATCH "ERROR [INPORT -1]

  MAKE "value INPORTB 198
  REPORTTESTPASSED [INPORTB did not crash]

  ; bad input
  CATCH "ERROR [(INPORTB)]
  CATCH "ERROR [INPORTB [192]]
  CATCH "ERROR [INPORTB -1]
END

TO OUTPORTTEST

  OUTPORT 198 0
  REPORTTESTPASSED [OUTPORT did not crash]

  ; bad input
  CATCH "ERROR [(OUTPORT)]
  CATCH "ERROR [(OUTPORT 192)]
  CATCH "ERROR [OUTPORT [192] 0]
  CATCH "ERROR [OUTPORT -1    0]

  OUTPORTB 198 0
  REPORTTESTPASSED [OUTPORTB did not crash]

  ; bad input
  CATCH "ERROR [(OUTPORTB)]
  CATCH "ERROR [(OUTPORTB 192)]
  CATCH "ERROR [OUTPORTB  [192] 0]
  CATCH "ERROR [OUTPORTB  -1    0]

END

TO PORTTEST
  INPORTTEST
  OUTPORTTEST
END

